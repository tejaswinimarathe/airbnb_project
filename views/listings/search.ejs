    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter{
            text-align: center;
            margin-right: 2rem;
            margin-top: 1.5rem;
            color: rgb(90, 86, 86);
        }
        .filter:hover{
            color: black;
            cursor: pointer;
        }
        .filter p{
            font-size: 0.8rem;
        }
        .tax-info{
            display: none;
        }
        .tax-toggle{
            border: 1px solid;
            border-radius: 1rem;
            height: 3rem;
            padding: 10px;
            display: flex;
           align-items: center;
           margin-left: 1rem;
        }
    </style>
    
         

    

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <%if(rec.length===0){%>
        <p class="card-body">
        <h3>üòî Sorry!! This country's locations are currently not available. üåç</h3>
        </p>
        <%}%>
    <%for(let records of rec){%>
    <a href="/listings/<%=records._id%>" class="listing-link">
    <div class="card col" >
    <img
     src="<%=records.image.url%>" 
     class="card-img-top" alt="listing_img" />
    
  <div class="card-body">
    <p class="card-text">
        <b><%=records.title%></b><br>
        &#8377; <%=records.price.toLocaleString("en-IN")%> /night
        <i class="tax-info">&nbsp;&nbsp;+18%GST</i>
    </p>
  </div>
  </div>
  <%}%>
</a>
    </div>
    
    
</body>

