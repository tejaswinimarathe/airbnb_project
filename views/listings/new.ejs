<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
        <br>
    <h3>Create new Listings</h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="add catchy title" class="form-control" required>
        <div class="invalid-feedback">title not looks good</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" class="form-control" required  placeholder="Enter description"></textarea>
            <div class="invalid-feedback">description is required</div>
        </div>
        
        <div class="mb-3">
            <label for="img" class="form-label">Upload Image</label>
            <input type="file" name="listing[image]"  class="form-control" required>
        </div>

        <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input type="" name="listing[price]" placeholder="2000" class="form-control" required>
                    <div class="invalid-feedback">Price should be valid</div>
                </div>

                <div class="col-md-8 mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="India" class="form-control" required>
                    <div class="invalid-feedback">please enter country</div>
                </div>
            </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" placeholder="Delhi,Goa,Mumbai" class="form-control" required>
            <div class="invalid-feedback">please enter location</div>
        </div>
        <div class="mb-3">
            <button class="btn add-btn">Add</button>
        </div>
        <br><br>
    </form>
    </div>
</div>