<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-6 offset-3 mt-3 shadow p-4 mb-4 ">
        <div class="d-flex justify-content-center  mt-2">
            <h3>SignUp On Wanderlust</h3>
        </div>
       <form action="/signup" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
        <input type="text" name="username" id="username" placeholder="Enter user name" class="form-control" required>
        <div class="invalid-feedback"> Not Looks Good</div>
        <div class="valid-feedback"> Looks Good</div>
        </div>

         <div class="mb-3">
            <label for="email" class="form-label">Email</label>
        <input type="email" name="email" id="email" placeholder="Enter your email" class="form-control" required>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" placeholder="Enter your password" class="form-control" required>
        </div>

        <div class="mb-2 d-flex justify-content-center mt-3">
            <button class="btn btn-success">SignUp</button>
        </div>

       </form>
    </div>
</div>